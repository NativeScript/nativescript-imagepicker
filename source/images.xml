<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:lv="nativescript-telerik-ui/listview"  loaded="pageLoaded">

	<Page.actionBar>
		<ActionBar title="{{ title }}">
			<ActionBar.navigationButton>
				<NavigationButton text="Albums" />
			</ActionBar.navigationButton>
			<ActionBar.actionItems>
				<!-- enabled="{{ selection.length > 0 }}" -->
				<ActionItem  text="{{ imagePicker.selection.length, imagePicker.doneText + (imagePicker.mode === 'single' ? '' : ' (' + imagePicker.selection.length + ')') }}" ios.position="right" tap="done" />
			</ActionBar.actionItems>
		</ActionBar>
	</Page.actionBar>
	<GridLayout>
		<lv:RadListView items="{{ assets }}" >
			<lv:RadListView.listViewLayout>
				<lv:ListViewGridLayout itemHeight="104" scrollDirection="Vertical" spanCount="3"/>
			</lv:RadListView.listViewLayout>
			<lv:RadListView.itemTemplate>
				<GridLayout  ios:margin="5" width="94" height="94" tap="{{ toggleSelection }}">
						<Image row="0" col="0"  opacity="{{ selected ? 0.7 : 1 }}" imageSource="{{ thumb }}" />
						<Border row="0" col="0" opacity="{{ selected ? 1 : 0 }}" width="24" height="24" margin="2" horizontalAlignment="right" verticalAlignment="bottom" borderWidth="1" borderColor="white" backgroundColor="blue" borderRadius="12">
						</Border>
				</GridLayout>
			</lv:RadListView.itemTemplate>
		</lv:RadListView>
	</GridLayout>
</Page>